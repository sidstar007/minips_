<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ppCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#002147"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Planned Payment"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_medium"
                />
            <TextView
                android:id="@+id/ppAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="0"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_medium"
                />
            <TextView
                android:id="@+id/ppDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="11-1-11"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_medium"
                />

        </LinearLayout>

        <Button
            android:id="@+id/doPaymentBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="5dp"
            android:background="@drawable/ic_baseline_check_24"
            app:backgroundTint="@color/green"/>
        <Button
            android:id="@+id/cancelPaymentBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="5dp"
            android:background="@drawable/ic_baseline_delete_outline_24"
            app:backgroundTint="@color/red"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>